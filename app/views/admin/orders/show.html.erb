<div class="row mt-3">
    <h3 class="col-8 text-align-start">注文履歴詳細</h3>
    <div class="row"></div>
    <table class="col-12">
      <tr>
        <td>購入者</td>
        <td>
          <%= link_to admin_customer_path(@order.customer_id) do %>
          <%= @order.customer.family_name + @order.customer.first_name %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>注文日</td>
        <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
      </tr>
      <tr>
        <td>配送先</td>
        <td>〒<%= @order.postal_code + @order.address %></br><%= @order.name %></td>
      </tr>
      <tr>
        <td>支払方法</td>
        <td><%= @order.payment_method %></td>
      </tr>
      <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
      <tr>
        <td>注文ステータス</td>
        <td><%= f.select :status, Order.statuses.keys %></td>
        <td><%= f.submit "更新", class: "btn" %></td>
      </tr>
      <% end %>
    </table>
    </div>
    <!--購入商品-->
    <div class="row">
    <div class="col-9">
      <table class='table'>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @order_items.each do |order_item| %>
          <tr>
            <td>
            <%= order_item.item.name %>
            </td>
            <td>
            <%= order_item.item.price %>(<%= (order_item.item.price * 1.1).round(-1) %>)
            </td>
            <td>
            <%= order_item.quantity %>
            </td>
            <td>
              <%= (order_item.item.price * 1.1).round(-1) * order_item.quantity %>
            </td>
            <%= form_with model: order_item, url: admin_order_item_update_path(order_item.id), method: :patch, local: true do |f| %>
            <td><%= f.select :order_status, OrderItem.order_statuses.keys %></td>
            <td>
              <%= f.submit "変更", class: "btn" %>
            </td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-3 mb-1 mr-2">
      <table class="table">
        <!--<%# orders.each do |order| %>-->
        <tr>
          <th>商品合計</th>
          <th>6,490円</th>
          <!--<%#= order.order_item.total_price %>円-->
        </tr>
        <tr>
          <th>送料</th>
          <th>800円</th>
          <!--<%#= order.shipping_cost %>-->
        </tr>
        <tr>
          <th>請求金額合計</th>
          <th>7,290円</th>
          <!--<%#= order.total_cost %>-->
        </tr>
        <!--<%# end %>-->
      </table>
    </div>
    </div>
  </div>
</div>