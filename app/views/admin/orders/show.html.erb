<div class="row mt-3">
    <h3 class="col-8 text-align-start">注文履歴詳細</h3>
    <div class="row"></div>
    <table class="col-12">
      <tr>
        <td>購入者</td>
        <td>
          <%= link_to admin_customer_path(@order.customer_id) do %>
          <%= @order.customer.family_name + @order.customer.first_name %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>注文日</td>
        <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
      </tr>
