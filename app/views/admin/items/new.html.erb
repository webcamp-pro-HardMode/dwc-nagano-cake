<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-10">
      <h2>新規登録画面</h2>
      <%= form_with model: @item, local:true do |f| %>
      <h4>商品画像</h4>
      <%= f.attachment_field :image %>
      <h4>商品名</h4>
      <%= f.text_field :name %>
      <h4>商品説明</h4>
      <%= f.text_area :introduction %>
      <h4>ジャンル</h4>
      <%= f.collection_select :genres_id, @genres, :id, :name, {prompt: "選択してください" }

      <h4>税抜価格</h4>
      <h4>販売ステータス</h4>

      <%= f.submit '投稿' %>
      <% end %>
    </div>
  </div>
</div>