<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-10">
      <h2>商品詳細</h2>
      <div class="row">
        <div class="col-4">
          <%= attachment_image_tag @item, :image, size: "300x300"  %>
        </div>
        <div class="col-8">
          <h3>商品名</h3><%= @item.name %>
          <h3>商品説明</h3><%= @item.introduction %>
          <h3>ジャンル</h3><%= @item.genre.name %>
          <h3>税込価格</br>（税抜価格）</h3><%= @item.price + @item.price * 0.1 %>(<%= @item.price %>)
          <h3>販売ステータス</h3><%= @item.is_status ? '販売中' : '販売停止中' %>
        </div>
      </div>


    </div>
  </div>
</div>