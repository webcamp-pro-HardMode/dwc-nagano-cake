<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-8">
      <h2>編集画面</h2>
      <%= form_with model: @item, url: admin_item_path, local:true do |f| %>

  <div class="form-group">
    <%= f.label :image, "商品画像" %>
    <%= f.attachment_field :image %>
  </div>

  <div class="form-group">
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :introduction, "商品説明" %>
    <%= f.text_area :introduction, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :genre_id, "ジャンル" %>
    <%= f.collection_select(:genre_id, @genres, :id, :name) %>
  </div>

  <div class="form-group">
    <%= f.label :price, "税抜価格" %>
    <%= f.text_field :price %>
  </div>

  <div class="form-group">
    <%= f.label :is_status, "販売ステータス" %>
    <%= f.radio_button :is_status, true %>
    <%= f.label :is_status, "販売中", value: true %>
    <%= f.radio_button :is_status, false %>
    <%= f.label :isstatus, "販売停止中", value: false %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>

 <% end %>
    </div>
  </div>
</div>
