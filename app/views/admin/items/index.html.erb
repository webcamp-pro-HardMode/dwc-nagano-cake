<div class="row justify-content-center">
  <div class="col-10 mt-3">
    <h2>商品一覧</h2>
      <%= link_to "新規追加", new_admin_item_path, class:"btn" %>
    <table class="table mt-3">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td><% if item.is_status == true %>
                <p class="text-success">販売中</p>
              <% else %>
                <p class="text-secondary">販売停止中</p>
              <% end %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="row justify-content-center">
      <div class="col-2 justify-content-cecnter">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>