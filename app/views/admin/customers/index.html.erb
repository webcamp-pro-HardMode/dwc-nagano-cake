<div class="container">
  <div class="row">
    <h3 class="col-2 text-center alert alert-secondary">会員一覧</h3>
    <div class="col-10"></div>
      <div class="col-10 offset-1">
      <table class='table table-inverse'>
        <thead>
          <tr class="alert-secondary">
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= customer.id %>
            </td>
            <td>
              <%= link_to customer.family_name + customer.first_name, admin_customer_path(customer) %>
            </td>
            <td>
              <%= customer.email %>
            </td>
            <td>
              <% if customer.is_exist == false %>
                <p class="text-success">有効</p>
              <% else %>
                <p class="text-secondary">退会</p>
              <% end %>
            </td>
          </tr>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="text-center"><%= paginate(@customers) %></div>
  </div>
</div>