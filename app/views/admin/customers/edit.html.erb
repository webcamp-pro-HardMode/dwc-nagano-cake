<div class="row mt-5">
  <div class="col-6 mx-auto">

    <div class="mb-5">
      <h4>
        <%= @customer.family_name + @customer.first_name %> さんの会員情報編集
      </h4>
    </div>
    <%= render 'layouts/errors', obj: @customer %>
    <!--自動推測じゃなく確実にshowアクションに行くようにするには、modelではなく、urlを指定-->
    <%= form_with model: @customer, url: admin_customer_path, local:true do |f| %>

    <div class="form-group row">
      <div class="col-md-3">
        <%= f.label  "氏名" , class: "col-form-label" %>
      </div>
      <div class="col-md-7">
        <div style="display:inline-flex">
          <div class="mx-3">
            <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name", class: "form-control" %>
          </div>
          <div class="mx-3">
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3 d-flex align-items-center">
        <%= f.label "フリガナ", class: "form-group-label" %>
      </div>
      <div class="col-md-7">
        <div style="display:inline-flex">
          <div class="mx-3">
            <%= f.text_field :kana_sei, autofocus: true, autocomplete: "kana_sei", class: "form-control" %>
          </div>
          <div class="mx-3">
            <%= f.text_field :kana_mei, autofocus: true, autocomplete: "kana_mei", class: "form-control" %>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3 d-flex align-items-center">
        <%= f.label "郵便番号", class: "form-group-label" %>
      </div>
      <div class="col-md-7">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3 d-flex align-items-center">
        <%= f.label "住所", class: "form-group-label" %>
      </div>
      <div class="col-md-7">
        <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control" %>
      </div>
    </div>


    <div class="form-group row">
      <div class="col-md-3 d-flex align-items-center">
        <%= f.label "電話番号", class: "form-group-label" %>
      </div>
      <div class="col-md-7">
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3 d-flex align-items-center">
        <%= f.label "メールアドレス", class: "form-group-label" %>
      </div>
      <div class="col-md-7">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3 d-flex align-items-center">
        <%= f.label "会員ステータス", class: "form-group-label" %>
      </div>
      <div class="col-md-7">
          <!--ラジオボタンで選択（false：有効）-->
          <%= f.radio_button :is_exist, :false %>
          <%= f.label :is_exist, '有効', value: :false %>
          <!--ラジオボタンで選択（true：退会）-->
          <%= f.radio_button :is_exist, :true %>
          <%= f.label :is_exist, '退会', value: :true %>
      </div>
    </div>

    <div class="row">
      <div class="col-12 text-right">
        <%= f.submit  "変更を保存", class: "btn" %>
      </div>
    </div>
    <% end %>


    </div>
  </div>

