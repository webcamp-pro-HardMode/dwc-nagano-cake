<div class="row ml-5 mt-5">
  <h4 class="col-xl-3 col-lg-5 col-md-6 col-12 mt-4 text-center">
    <%= @user.family_name %><%= @user.first_name %> さんの会員詳細
  </h4>
</div>

<div class="row mt-3">
    <div class="table responsive">
      <table class="table col-10 offset-1 table-borderless">
        <tbody>
        <% @customer.each do |customer| %>
          <tr>
          <td class="col-2">会員ID</td>
          <td>
            <%= customer.id %>
          </td>
        </tr>
        <tr>
          <td>氏名</td>
          <td>
            <%= customer.family_name %>
            <%= customer.first_name %>
          </td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td>
            <%= customer.kana_sei %>
            <%= customer.kana_mei %>
          </td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td>
            <%= customer.postal_code %>
          </td>
        </tr>
        <tr>
          <td>住所</td>
          <td>
            <%= customer.address %>
          </td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td>
            <%= customer.phone_number %>
          </td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td>
            <%= customer.email %>
          </td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td class="text-success">
            <!--会員ステータスの判定（trueなら退会、falseなら有効）-->
            <%= customer.is_exist ? '退会' : '有効' %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
    </div>
</div>
<div class="row mb-5">
  <div class="col-7 offset-2">
    <div class="d-flex">
      <div class="col-3">
        <%= link_to "編集する",  edit_admin_customer_path, class: "btn" %>
      </div>
      <div class="col-1">
        <%= link_to "注文履歴一覧を見る", orders_path, class: "btn", style: "width: 200px;" %>
      </div>
    </div>
  </div>
</div>