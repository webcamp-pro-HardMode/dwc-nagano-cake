<div class="container">
<h3>ジャンル一覧・追加</h3>
<br>
  <div class="row">
      <div class= "col-2">
        <lavel>ジャンル名</lavel>
      </div>
      <div class= "col-3">
          <%= form_with model:@genre, url:'/admin/genres', local:true do |f| %>
          <%= f.text_field :name,class: "form-control",placeholder: "ジャンル名"%>
          <% end %>
        </div>
      <div class= "col-7">
        <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
        <%= f.submit '新規登録',class: "btn btn-success " %>
        <% end %>  <br>
      
      </div>
  </div><br>
      <!--ジャンルテーブル-->
  <div class="row">
    <table class="table table-striped col-6">
      <thead>
          <tr>
            <th>ジャンル</th>
            <th colspan="1"></th>
          </tr>
      </thead>
      <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する',edit_admin_genre_path(genre.id),class: "btn btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>