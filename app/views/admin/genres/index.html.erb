<div class="ro">
<h3>ジャンル一覧・追加</h3>
<br>
<%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
<form class="form-inline">
  <div class="form-group mb-2">
    <label for="staticEmail2" class="sr-only">Email</label>
  </div>

  <div class="form-group mx-sm-3 mb-2">
    <lavel class="mx-2" >ジャンル名</lavel>
    <span class="mx-4"><%= f.text_field :name %></span>
    <span class="mx-4"><%= f.submit '新規登録',class: "glyphicon glyphicon-pencil btn btn-success" %></span>
  </div>
</form>
<% end %>

      <!--ジャンルテーブル-->
  <div class="row">
    <table class="table table-striped col-6">
      <thead>
          <tr>
            <th>ジャンル</th>
            <th colspan="1"></th>
          </tr>
      </thead>
      <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する',edit_admin_genre_path(genre.id),class: "btn btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>