
<div class="row justify-content-center">
  <div class="col-6 mt-3">
    <h3 class="mt-3">ジャンル一覧・追加</h3>

    <div class="form mt-3">
      <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
        <label for="staticEmail2" class="sr-only">Email</label>
        <lavel class="mx-2" >ジャンル名</lavel>
        <span class="mx-4"><%= f.text_field :name %></span>
        <span class="mx-4"><%= f.submit '新規登録',class: "glyphicon glyphicon-pencil btn" %></span>
      <% end %>
    </div>
    <!--ジャンルテーブル-->
    <div class="row justify-content-center mt-5">
      <table class="table col-10">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th class="colspan-3"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する',edit_admin_genre_path(genre.id),class: "btn" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>