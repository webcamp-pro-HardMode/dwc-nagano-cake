<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="conteiner-fluid">
      <div class="row d-flex">
        <div class="col-lg-3 mx-auto">
          <%= link_to root_path do %>
          <img id="logo" src="/assets/logo.png" alt="ながのケーキ" class="ml-5">
          <% end %>
        </div>
        <div class="col-lg-9">
          <div class="row my-3 mr-5 justify-content-end">
            <% if admin_signed_in? %>
              <form id="form" action="#">
              <input id="input" type="text" placeholder="検索">
              <input id="submit" type="submit" value="検索">
              </form>
            <% end %>
          </div>
          <div class="row">
        <ul class="navigation mr-lg-auto mx-auto mt-4 mb-3">
          <% if customer_signed_in? %>
            <li><%= link_to " マイページ", my_page_path, class:"btn nav-btn" %></li>
            <li><%= link_to " 商品一覧", items_path, class:"btn nav-btn" %></li>
            <li><%= link_to " カート", cart_items_path, class:"btn nav-btn bi bi-cart" %></li>
            <li><%= link_to " ログアウト", destroy_customer_session_path, method: :delete, class:"btn nav-btn" %></li>
          <% elsif admin_signed_in? %>
            <li><%= link_to " 商品一覧", admin_items_path, class:"btn nav-btn" %></li>
            <li><%= link_to " 会員一覧", admin_customers_path, class:"btn nav-btn" %></li>
            <li><%= link_to " 注文履歴一覧", admin_path, class:"btn nav-btn" %></li>
            <li><%= link_to " ジャンル一覧", admin_genres_path, class:"btn nav-btn" %></li>
            <li><%= link_to " ログアウト", destroy_admin_session_path, method: :delete, class:"btn nav-btn" %></li>
          <% else %>
            <li><%= link_to " About", homes_about_path, class:"btn nav-btn" %></li>
            <li><%= link_to " 商品一覧", items_path, class:"btn nav-btn" %></li>
            <li><%= link_to " 新規登録", new_customer_registration_path, class:"btn nav-btn" %></li>
            <li><%= link_to " ログイン", new_customer_session_path, class:"btn nav-btn" %></li>
          <% end %>
        </ul>
          </div>
      </div>
    </header>


    <main class="container-fluid">
    <%= flash[:notice] %>
    <%= flash[:alert] %>

    <%= yield %>
    </main>

    <footer class="mt-3">
      <div class="adress">
        長野県XX市XX町x-xx</br>
        Nagano Cake 本店
      </div>
      <div class="copyright text-center">
       Copyright © Nagano Cake inc. All Rights Reserved.
      </div>
    </footer>
  </body>
</html>
