<div class="row">
    <%= flash[:notice] %>
    <h4 class="col-4 offset-2 mt-4">ログイン</h4>
</div>

<div class="row mt-3">
  <p class="col-8 offset-3">会員の方はこちらからログイン</p>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<form class="d-flex justfy-content-center">

  <div class="form-group mb-4">
    <div>
      <%= f.label "メールアドレス" %>
    </div>
    <div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-contol" %>
    </div>
  </div>

  <div class="form-group mb-4">
    <div>
      <%= f.label "パスワード" %>
    </div>
    <div>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-contol" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="form-group mb-4">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <% end %>

  <div>
    <%= f.submit "LOGIN", class: "btn" %>
  </div>
</form>
<% end %>


<div class="row">
  <p class="col-8 offset-3 mt-3">会員登録がお済みで無い方</p>
</div>

<div class="row">
  <div class="col-4 offset-4">
    <%= link_to "こちら", new_registration_path(resource_name) %>  から新規登録を行ってください。<br />
  </div>
</div>


