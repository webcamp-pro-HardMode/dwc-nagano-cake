<div class="row">
    <%= flash[:notice] %>
    <h4 class="col-4 offset-2 mt-4">ログイン</h4>
</div>

<div class="row mt-3">
  <p class="col-8 offset-3">会員の方はこちらからログイン</p>
</div>

<form>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group form_row">
    <%= f.label "メールアドレス", class: "col-md-3 col-form-label" %>
    </div>
    <div class="col-md-5">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="form-group form_row">
    <%= f.label "パスワード", class: "col-md-3 col-form-label" %>
    <div class="col-md-5">
    <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>

  <!--<div class="col-10">-->
  <%# if devise_mapping.rememberable? %>
  <%#= f.check_box :remember_me %>
  <%#= f.label :remember_me %>
  <!--</div>-->
  <%# end %>

  <div class="row">
    <div class="col-12 text-left">
  　　　<%= f.submit "LOGIN", class: "btn" %>
  　</div>
  </div>

<% end %>
</form?

<div class="row">
  <p class="col-8 offset-3">会員登録がお済みで無い方</p>
</div>

<div class="row">
  <div class="col-4 offset-4">
    <%= link_to "こちら", new_registration_path(resource_name) %>  から新規登録を行ってください。<br />
  </div>
</div>


