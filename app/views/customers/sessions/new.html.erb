<div class="row mt-5">
  <div class="col-6 mx-auto">
    <%= flash[:notice] %>
    <h4 class="col-3 mx-auto mt-4 mb-5">ログイン</h4>

    <div class="row mt-3">
      <div class="col-6 mx-auto">
        <p>会員の方はこちらからログイン</p>
      </div>
    </div>

    <div class="col-6 mx-auto">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group row">
      <div class="col-md-5">
        <%= f.label "メールアドレス", class: "col-form-label" %>
      </div>
      <div class="col-md-7">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-5">
        <%= f.label "パスワード", class: "col-form-label" %>
      </div>
      <div class="col-md-7">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
    </div>

    <%# if devise_mapping.rememberable? %>
    <!--<div class="form-group row">-->
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    <!--</div>-->
    <%# end %>

  <div class="row">
    <div class="col- mx-auto mb-5">
    <%= f.submit "LOGIN", class: "btn" %>
    </div>
  </div>

<% end %>
</div>


<div class="row">
  <p class="col-6 mx-auto">会員登録がお済みで無い方</p>
</div>

<div class="row">
  <div class="col-6 mx-auto">
    <%= link_to "こちら", new_registration_path(resource_name) %>  から新規登録を行ってください。
  </div>
</div>

</div>
</div>
