<div class="mt-3">
  <h1>ショッピングカート</h1>
  <div class="d-flex justify-content-end">

    <!--追加で記述が必要-->
    <%= link_to 'カートを空にする',cart_items_destroy_all_path, method: :delete, class: "btn mb-3",style: "width:200px" %>
  </div>

  <% if @cart_items.blank? %>
   <p>カートは空です</p>
  <% else %>
  <!--カートテーブル-->
    <div class="d-flex justify-content-center">
      <div class="row">
        <table class="table table-bordered" style="width:1000px;">
          <thead>
              <tr>
                <th>商品名</th>
                <th>単価（税込)</th>
                <th>数量</th>
                <th>小計</th>
                <th></th>
              </tr>
          </thead>
          <tbody>
                <% @sum = 0 %>
                <% @cart_items.each do |cart_item| %>
              <tr>
                <td><%= attachment_image_tag cart_item.item, :image, size: "50x50", class:"effect" %><%= cart_item.item.name %></td>
                <td><%= (cart_item.item.price * 1.1).round(-1) %></td>
                <!--以下修正する-->
                <!--量-->
                <td><%= form_with model: @cart_item, url: cart_item_path(cart_item.id), method: :patch, local: true do |f| %>
                    <%= f.number_field :count, value: cart_item.count %>
                    <%= f.submit "変更", class: "btn" %>
                </td>
                <td><%= ((cart_item.item.price * 1.1) * cart_item.count).round(-1) %></td>
                <td><%= link_to '削除する',cart_item_path(cart_item.id), method: :delete, class: "btn" %></td>
                <% end %>
              </tr>
                <% @sum += ((cart_item.item.price * 1.1) * cart_item.count).round(-1) %>
                <% end %>
          </tbody>
        </table>
       </div>
     </div>
  <% end %>
<div class= "row d-flex justify-content-end">
  <div class= "col-2">
    <%= link_to "買い物を続ける", items_path, class: "btn" %>
  </div>
  <div class= "col-5"></div>
  <div class= "col-3 ">
<table class="table table-bordered" style="width:200px;" >
  <tr>
    <th>合計金額</th>
    <td><%= @sum  %></td>
  </tr>
</table>
  </div>
</div>

<div class= "row justify-content-left">
</div>
<div class= "row justify-content-center">
  <div class= "col-2">
    <%= link_to "情報入力に進む", new_order_path, class: "btn" %>
  </div>
</div>
</div>