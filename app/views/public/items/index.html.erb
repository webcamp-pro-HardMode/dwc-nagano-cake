<div class="container">
  <div class="row">
    <h3 class="col-2">商品一覧</h3><p class="ml-1 mt-2">(全<%= @items.count %>件)</p>
    <div class="col-10"></div>
    <% @items.each do |item| %>
      <div class="col-lg-3 col-md-6 mb-4">
        <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item, :image, size: "200x200", class:"effect" %><br>
        <% end %>
        <div class="mt-3 offset-2">
          <%= item.name %><br>
        </div>
        <div class="mt-2 offset-2">
      　 ¥<%= ((BigDecimal(item.price) * BigDecimal("1.1")).ceil).to_s(:delimited) %>
      　</div>
      </div>
    <% end %>
  </div>
</div>

