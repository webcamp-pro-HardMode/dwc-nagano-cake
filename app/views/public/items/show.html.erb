<div class="conteiner">
  <div class="row">
    <div class="offset-3">
       <%= attachment_image_tag @item, :image, size: "330x220" %>
    </div>
    <div class="ml-5">
      <h2><%= @item.name %></h2><br>
      <div class="mb-5"><%= @item.introduction %></div>
      <div class="d-flex mt-5">
      <h3 class="mt-5">¥2,000<!--<%#= item.price %>税込表示できません--></h3><p class="mt-5 ml-2">(税込)</p>
      </div>
      <div class="d-flex mt-4">
        <%= form_with model: @cart_item, url: cart_items_path, method: :post, local: true do |f| %>
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.number_field :count, valie: @item.id, include_blank: "個数選択" %>
          <%= f.submit "カートに入れる", class: "btn btn-primary" %>
        <% end %>
      </div>


  </div>
</div>