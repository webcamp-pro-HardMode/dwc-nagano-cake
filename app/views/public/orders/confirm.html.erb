<div class="row">
	<h1>注文情報確認</h1>
	<div class="row">
		<%= form_with url: orders_path, method: :post, local: true do |f| %>
		<div class="col" >
			<table class="table">
					<thead>
						<tr>
							<th>商品名</th>
							<th>単価(税込)</th>
							<th>数量</th>
							<th>小計</th>
						</tr>
					</thead>
					<tbody>
					<% @sum = 0 %>
				  <% @cart_items.each do |cart_item| %>
						<tr>
							<td>
								<%= attachment_image_tag cart_item.item, :image, fallback: "no_image.jpg", size: "30x30" %>
								<%= cart_item.item.name %>
							</td>
							<td>
							  <!--小数を整数に四捨五入する場合round-->
								<%= cart_item.item.price * 1.1 %>
							</td>
							<td>
								<%= cart_item.count %>
							</td>
							<td>
								<%= cart_item.item.price * 1.1 * cart_item.count %>
							</td>
						</tr>
						<% @sum += (cart_item.item.price * 1.1) * cart_item.count %>
				  <% end %>
				</tbody>
			</table>
		</div>
			<div class="col">
				<table>
					<thead>
						<tr>
							<th>送料</th>
							<td><%= @order.shipping_cost %></td>
						</tr>
						<tr>
							<th>商品合計</th>
							<td><%= @sum %></td>
						</tr>
						<tr>
							<th>合計金額</th>
							<td><%= @sum + @order.shipping_cost %></td>
						</tr>
					</thead>
				</table>
			</div>
		</div>
	<div class="row">
			<h4>支払情報</h4>
			<%= @order.payment_method %>
			<h4>お届け先</h4>
			<%= @order.postal_code + @order.address %><br>
			<%= @order.name %>
	</div>

			<!--ユーザに直接入力させることなく何かの値の受け渡しを行いたいf.hidden_field-->
			<%= f.hidden_field :name, value: @order.name %>
			<%= f.hidden_field :shipping_cost, value: @order.shipping_cost %>
			<%= f.hidden_field :postal_code, value: @order.postal_code %>
			<%= f.hidden_field :address, value: @order.address %>
			<%= f.hidden_field :payment_method, value: @order.payment_method %>

			<!--以下送料抜き-->
			<%= f.hidden_field :total_cost, value: @sum %>
			<%#= f.hidden_field :total_cost value: @sum + @order.shipping_cost %>


			<div class="">
			<%= f.submit '購入を確定する', class: "btn btn-success" %>
			</div>



			<% end %>
	</div>