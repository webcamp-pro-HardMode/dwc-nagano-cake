<div class="row">
	<h1>注文情報確認</h1>
	<div class="row">
		<div class="col" >
			<table class="table">
					<thead>
						<tr>
							<th>商品名</th>
							<th>単価(税込)</th>
							<th>数量</th>
							<th>小計</th>
						</tr>
					</thead>
				  <% @cart_items.each do |cart_item| %>
					<tbody>
						<tr>
							<td>
								<%= attachment_image_tag cart_item.item, :image, fallback: "no_image.jpg", size: "30x30" %>
								<%= cart_item.item.name %>
							</td>
							<td>
							  <!--小数を整数に四捨五入する場合round-->
								<%= (cart_item.item.price*1.1)round %>
							</td>
							<td>
								<%= cart_item.count %>
							</td>
							<td>
								<%= (cart_item.item.price*1.1*cart_item.count)round %>
							</td>
						</tr>
					</tbody>
				  <% end %>
				</table>
			</div>
			<div class="col">
				<table>
					<thead>
						<tr>
							<th>送料</th>
							<td><%= @order.shipping_cost%></td>
						</tr>
						<tr>
							<th>商品合計</th>
							<td><%= (@total_price*1.1).round %></td>
						</tr>
						<tr>
							<th>合計金額</th>
							<td><%= ((@total_price*1.1).round %></td>
						</tr>
					</thead>
				</table>
			</div>
		</div>
	<div class="row">
			<h4>支払情報</h4>
			<h4>お届け先</h4>
			<%= f.submit '購入を確定する', class: "btn btn-success" %>
	</div>
	</div>