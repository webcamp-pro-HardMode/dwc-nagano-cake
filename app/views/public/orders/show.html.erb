<div class="container">
  <div class="row">
    <h5 class="col-2 text-center offset-1 mt-3 mb-4">注文履歴詳細</h5>
    <div class="col-10"></div>
    <div class="col-8">
      <div class="mb-3">注文情報</div>
      <table class='table table-bordered'>
        <tbody>
          <tr>
            <th>注文日</th>
            <td>
              <%= @order.created_at.strftime("%Y/%m/%d") %>
            </td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>

              <%= @order.postal_code %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th>支払い方法</th>
            <td>
              <%= @order.payment_method %>
            </td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td>
              <%= @order.status %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-4">
      <div class="mb-3">請求情報</div>
        <table class='table table-bordered'>
          <tr>
            <th>商品合計</th>
            <td>
              ¥<%= @order.total_cost.to_s(:delimited) %>
            </td>
          </tr>
          <tr>
            <th>配送料</th>
            <td>
              ¥<%= @order.shipping_cost %>
            </td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td>
              ¥<%= (@order.total_cost + @order.shipping_cost).to_s(:delimited) %>
            </td>
          </tr>
        </table>
      </div>
      <div class="col-10">
      <div class="mb-3">注文内容</div>
        <table class='table table-bordered'>
          <thead>
            <tr>
              <th>商品</th>
              <th>単価(税込)</th>
              <th>個数</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <% @order_items.each do |order_item| %>
            <tr>
              <td>
                <%= order_item.item.name %>
              </td>
              <td>
                ¥<%= order_item.price.to_s(:delimited) %>
              </td>
              <td>
                <%= order_item.quantity %>
              </td>
              <td>
                ¥<%= order_item.total_price.to_s(:delimited) %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>

    </div>