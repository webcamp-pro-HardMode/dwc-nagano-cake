<div class="container-fluid">
  <div class="row">
    <h5 class="col-2 text-center offset-1 mb-4">注文履歴一覧</h5>
    <div class="col-12">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <!--注文日-->
            <td>
              <%= order.created_at.strftime("%Y/%m/%d") %>
            </td>
            <!--配送先-->
            <td>
              〒<%= order.postal_code %>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <!--商品名-->
            <td>
              <% order.order_items.each do |order_item| %>
                <%= order_item.item.name %><br>
              <% end %>
            </td>
            <!--支払い金額-->
            <td>
              ¥<%= order.total_cost.to_s(:delimited) %>
            </td>
            <!--注文状態-->
            <td>
              <%= order.status %>
            </td>
            <td>
              <%= link_to "表示する", order_path(order), class: "btn btn-sm" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>